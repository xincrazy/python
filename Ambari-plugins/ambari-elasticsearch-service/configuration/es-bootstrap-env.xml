<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>es.install_dir</name>
        <value>/opt</value>
        <description>This is elasticsearch</description>
    </property>

  <property>
    <name>es_log_dir</name>
    <value>/var/log/elasticsearch</value>
    <description>elasticsearch Log dir</description>
  </property> 

 <property>
    <name>es_pid_dir</name>
    <value>/var/run/elasticsearch</value>
    <description>Dir containing process ID file</description>
  </property>

  <property>
    <name>es_user</name>
    <value>elasticsearch</value>
    <property-type>USER</property-type>
    <description>User elasticsearch daemon runs as</description>
  </property> 
        
  <property>
    <name>es_group</name>
    <value>elasticsearch</value>
    <property-type>GROUP</property-type>
    <description>elasticsearch group</description>
  </property>

    <property>
        <name>es_download_url</name>
        <value>http://10.128.7.245/oneapm/elasticsearch-2.1.1.zip</value>
        <description>provide the url for downloading elasticsearch.zip</description>
    </property>


</configuration>

